<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.prompttracker</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/laurent/.local/bin/uv</string>
        <string>run</string>
        <string>--with</string>
        <string>flask</string>
        <string>./prompt-tracker</string>
        <string>serve</string>
        <string>--port</string>
        <string>8080</string>
        <string>--host</string>
        <string>127.0.0.1</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Users/laurent/Library/Logs/prompt-tracker.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/laurent/Library/Logs/prompt-tracker.error.log</string>

    <key>WorkingDirectory</key>
    <string>/Users/laurent/repos/prompt_tracker</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>
